<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Rock Paper Scissors GAME</title>
    <!-- CSS Bootstrap v5.1.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Manual Styling -->
    <link rel="stylesheet" href="/css/game.css">
    <!-- Open Sans Font link -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Section All -->
    <section class="game-section">

        <!-- Navigation -->
        <nav class="nav-is-flex">
            <a href="/" class="nav-button-n-logo nav-back-button">&lt;</a>
            <div class="nav-button-n-logo nav-logo">
                <img src="/img/logo.png">
            </div>
            <div class="nav-button-n-logo nav-name">ROCK PAPER SCISSORS</div>
        </nav>

        <!-- Content -->
        <div class="content">
            <!-- Row for Name -->
            <div class="row">
                <div class="col player">PLAYER</div>
                <div class="col"></div>
                <div class="col player">COM</div>
            </div>

            <!-- Row for ROCK Image -->
            <div class="row">
                <div class="col hand-parent">
                    <img onclick="pilihanPlayer('rock')" id="playerRock" class="hand-img hand-img-hover" src="/img/batu.png" alt="">
                </div>
                
                <div class="col"></div>

                <div class="col hand-parent">
                    <img id="enemyRock" class="enemy-hand-img" src="/img/batu.png" alt="">
                </div>
            </div>

            <!-- Row for PAPER Image, VS, and STATUS-->
            <div class="row">
                <div class="col hand-parent">
                    <img onclick="pilihanPlayer('paper')" id="playerPaper" class="hand-img hand-img-hover" src="/img/kertas.png" alt="">
                </div>
                
                <div class="col hand-parent">
                    <p id="vs" class="vs-style">VS</p>
                </div>
                
                <div class="col hand-parent">
                    <img id="enemyPaper" class="enemy-hand-img" src="/img/kertas.png" alt="">
                </div>
            </div>

            <!-- Row for SCISSORS Image -->
            <div class="row">
                <div class="col hand-parent">
                    <img onclick="pilihanPlayer('scissors')" id="playerScissors" class="hand-img hand-img-hover" src="/img/gunting.png" alt="">
                </div>
                
                <div class="col vs-style"></div>
                
                <div class="col hand-parent">
                    <img id="enemyScissors" class="enemy-hand-img" src="/img/gunting.png" alt="">
                </div>
            </div>

            <!-- Row for RESET Button -->
            <div class="row">
                <div class="col hand-parent">
                    <img id="reset" class="reset-img" src="/img/refresh.png" alt="">
                </div>
            </div>
        </div>
        
    </section>   

    <!-- JS Bootstrap v5.1.3 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
</body>
</html>